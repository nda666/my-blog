    "@remix-run/react": "^1.7.2",
    "@sentry/remix": "^7.18.0",
    "@tanstack/react-query": "^4.10.3",
    "contentful": "^9.2.9",
    "cross-env": "^7.0.3",
    "framer-motion": "^6.5.1",
    "lru-cache": "^7.14.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.4.0",
    "react-markdown": "^8.0.3",
    "react-paginate": "^8.1.4",
    "react-syntax-highlighter": "^15.5.0",
    "rehype-raw": "^6.1.1",
    "remark-gemoji": "^7.0.1",
    "remark-gfm": "^3.0.1"
